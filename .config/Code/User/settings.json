{
  "C_Cpp.intelliSenseEngine": "disabled",
  "[c]": {
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
  },
  "[makefile]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },
  "clangd.arguments": [
    "--header-insertion=never"
  ],
  "cmake.configureOnOpen": true,
  "cmake.showOptionsMovedNotification": false,
  "dev.containers.dockerPath": "podman",
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": false,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.bracketPairColorization.enabled": false,
  "editor.defaultColorDecorators": "auto",
  "editor.fontFamily": "Input Sans",
  "editor.fontSize": 13,
  "editor.guides.highlightActiveIndentation": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.inlayHints.enabled": "offUnlessPressed",
  "editor.matchBrackets": "never",
  "editor.minimap.enabled": false,
  "editor.occurrencesHighlight": "off",
  "editor.renderFinalNewline": "off",
  "editor.scrollBeyondLastLine": false,
  "editor.selectionHighlight": false,
  "editor.semanticHighlighting.enabled": false,
  "editor.snippetSuggestions": "bottom",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  "editor.wordWrapColumn": 88,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1,
    "vscodevim.vim": 2
  },
  "extensions.ignoreRecommendations": true,
  "files.associations": {
    "*.h": "c",
    "*.log": "plaintext",
    ".clang-format": "yaml",
    ".clang-tidy": "yaml"
  },
  "files.autoSave": "onFocusChange",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.countBadge": "off",
  "git.decorations.enabled": false,
  "git.openRepositoryInParentFolders": "always",
  "github.copilot.editor.enableAutoCompletions": false,
  "json.schemaDownload.enable": true,
  "jupyter.askForKernelRestart": false,
  "jupyter.experiments.enabled": false,
  "markdown.preview.fontFamily": "sans-serif",
  "markdown.preview.markEditorSelection": false,
  "mesonbuild.buildFolder": "build-vscode",
  "mesonbuild.configureOnOpen": true,
  "mesonbuild.configureOptions": [
    "-Dbuildtype=debug",
    "-Dwarning_level=everything",
    "-Dcpp_args=-g3"
  ],
  "mesonbuild.downloadLanguageServer": true,
  "notebook.output.textLineLimit": 1000,
  "python.REPL.sendToNativeREPL": true,
  "python.analysis.autoImportCompletions": false,
  "python.analysis.autoSearchPaths": false,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.diagnosticSeverityOverrides": {
    "reportUnusedVariable": "information"
  },
  "python.analysis.typeCheckingMode": "standard",
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.allowChords": false,
  "terminal.integrated.cursorStyle": "underline",
  "terminal.integrated.defaultProfile.osx": "homebrew bash",
  "terminal.integrated.fontFamily": "Input Mono",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.profiles.osx": {
    "homebrew bash": {
      "args": [
        "-l"
      ],
      "icon": "terminal-bash",
      "path": "/opt/homebrew/bin/bash"
    }
  },
  "terminal.integrated.sendKeybindingsToShell": true,
  "update.mode": "manual",
  "update.showReleaseNotes": false,
  "vscode-neovim.ctrlKeysForInsertMode": [
    "a",
    "c",
    "d",
    "h",
    "j",
    "m",
    "o",
    "r",
    "t",
    "u",
    "w",
    "e"
  ],
  "vscode-neovim.neovimInitVimPaths.darwin": "~/.config/nvim/minit.vim",
  "vscode-neovim.neovimInitVimPaths.linux": "~/.config/nvim/minit.vim",
  "vscode-neovim.neovimWidth": 200,
  "workbench.colorTheme": "Default Light Modern",
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.enablePreview": false,
  "workbench.editor.tabSizing": "shrink",
  "workbench.enableExperiments": false,
  "workbench.startupEditor": "none",
  "workbench.tree.renderIndentGuides": "none",
  "zenMode.showTabs": "none"
}
